<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    tools:viewBindingIgnore="true">


    <ImageView
        android:id="@+id/welcome_adapter_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/z_app_cover"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintHeight_percent="0.75"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/a_welcome_backgroundd"
        android:paddingTop="35dp"
        >



        <TextView
            android:id="@+id/welcome_adapter_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/welcome_adapter_content_text"
            app:layout_constraintEnd_toEndOf="@id/welcome_adapter_content_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white_color"
            android:textStyle="bold"
            android:textSize="21sp"
            android:text="@string/welcome_page1_title"
            android:gravity="center"
            android:fontFamily="monospace"
            app:layout_constraintVertical_bias="0"
            android:shadowDx="7"
            android:shadowDy="7"
            android:shadowRadius="3.6"
            android:shadowColor="@color/gray_color"/>


        <TextView
            android:id="@+id/welcome_adapter_content_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_adapter_title_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="#E8E0E0E2"
            android:textSize="15sp"
            android:text="@string/welcome_page1_content"
            android:gravity="center"
            android:fontFamily="monospace"
            android:lineSpacingExtra="5dp"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="25dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="1.6"
            android:shadowColor="@color/gray_color"
            app:layout_constraintWidth_percent="0.86"
            android:justificationMode="inter_word"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>