<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="5dp"
    android:layoutDirection="ltr"
    android:orientation="horizontal"
    android:textDirection="ltr"
    android:background="@color/darker_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tab_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b_main_unselected_tagbg"
            android:paddingVertical="6dp"
            android:text="@string/filter_all"
            android:textColor="@color/white_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="13dp"
            app:drawableStartCompat="@drawable/b_main_tag_all"
            android:drawablePadding="5dp"
            android:layout_marginEnd="13dp"
            />

        <TextView
            android:id="@+id/tab_trending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/b_main_unselected_tagbg"
            android:gravity="center"
            android:paddingVertical="6dp"
            android:text="@string/filter_trending"
            android:textColor="@color/white_color"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="13dp"
            app:drawableStartCompat="@drawable/b_main_tag_trending"
            android:drawablePadding="5dp"
            />



    </LinearLayout>

</HorizontalScrollView>