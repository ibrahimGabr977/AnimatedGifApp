    <TextView
        android:id="@+id/set_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="35dp"
        android:layout_weight="0"
        android:background="@drawable/s_select_category_setbg"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingVertical="9dp"
        android:shadowColor="@color/blue_light_color"
        android:shadowDx="2.1"
        android:shadowDy="2.1"
        android:shadowRadius="1.6"
        android:text="@string/set_app_content"
        android:textColor="@color/white_color"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/cancel"
        app:layout_constraintEnd_toEndOf="@id/contentsFlowLayout"
        app:layout_constraintTop_toBottomOf="@id/contentsFlowLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginStart="17dp"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/s_set_category_skipbg"
        android:fontFamily="serif"
        android:gravity="center"
        android:paddingVertical="9dp"
        android:shadowColor="@color/blue_light_color"
        android:shadowDx="2.1"
        android:shadowDy="2.1"
        android:shadowRadius="1.6"
        android:text="@string/report_post_cancel"
        android:textColor="@color/white_color"
        android:textSize="15sp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="@id/set_content"
        app:layout_constraintEnd_toStartOf="@id/set_content"
        app:layout_constraintStart_toStartOf="@id/contentsFlowLayout"
        app:layout_constraintTop_toTopOf="@id/set_content"
        android:layout_marginEnd="17dp"/>
