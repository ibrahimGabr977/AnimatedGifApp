<resources>
    <!-- Base application theme. -->
    <style name="Theme.GifsMe" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_color</item>
        <item name="colorPrimaryVariant">@color/darker_color</item>
        <item name="colorOnPrimary">@color/white_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/darker_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/darker_color</item>

        <!--changing nav drawer separator color-->
        <item name="android:listDivider">@color/divider_color</item>
        <!--changing nav drawer sub category title color-->
        <item name="android:textColorSecondary">@color/divider_color</item>

    </style>


    <style name="CustomNavTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">casual</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:textSize">13sp</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_in</item>
    </style>



</resources>