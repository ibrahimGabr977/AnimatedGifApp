<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_darker_color"
    android:layoutDirection="ltr"
    android:textDirection="ltr">


    <ImageView
        android:id="@+id/player_back_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/store_backd"
        app:layout_constraintVertical_bias="0.025"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintHorizontal_bias="0.07"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/player_back_image_btn"
        app:layout_constraintEnd_toStartOf="@id/player_browse_image_btn"
        app:layout_constraintTop_toTopOf="@id/player_back_image_btn"
        app:layout_constraintBottom_toBottomOf="@id/player_back_image_btn"
        android:textColor="@color/white_color"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="@string/nav_player"
        android:fontFamily="monospace"/>



    <ImageView
        android:id="@+id/player_browse_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/player_back_image_btn"
        app:layout_constraintBottom_toBottomOf="@id/player_back_image_btn"
        android:src="@drawable/generate_video_addd"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintHorizontal_bias="0.93"/>





    <ImageView
        android:id="@+id/player_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.5"
        android:scaleType="fitXY"
        />

    <ImageView
        android:id="@+id/player_gif_sign_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/player_image_view"
        app:layout_constraintEnd_toEndOf="@id/player_image_view"
        app:layout_constraintTop_toTopOf="@id/player_image_view"
        app:layout_constraintBottom_toBottomOf="@id/player_image_view"
        android:importantForAccessibility="no"
        android:src="@drawable/z_gif_signd_large"
        android:background="@drawable/z_gif_signbg"
        android:padding="3.5dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>