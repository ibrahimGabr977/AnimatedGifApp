<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.selectmedia.SelectActivity"
    android:layoutDirection="ltr"
    android:textDirection="ltr">










    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="#96FAFCFE"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.93"
        app:layout_constraintWidth_percent="0.85"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="31dp"
            >





        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/select_media_browse_images"
            app:layout_constraintEnd_toEndOf="@id/select_media_browse_images"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/select_media_browse_images"
            app:layout_constraintVertical_bias="1"
            android:text="@string/select_media_type"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:lineSpacingExtra="3dp"
            android:fontFamily="serif"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/select_media_browse_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintBottom_toTopOf="@id/select_media_browse_videos"
            android:textColor="@color/black_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/images"
            app:drawableStartCompat="@drawable/select_imagesd"
            android:drawablePadding="15dp"
            android:background="@drawable/select_mediabg"
            android:paddingHorizontal="69dp"
            android:layout_marginBottom="17dp"
            android:fontFamily="monospace"
            android:paddingVertical="3.5dp"/>


        <TextView
            android:id="@+id/select_media_browse_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/select_media_browse_images"
            app:layout_constraintEnd_toEndOf="@id/select_media_browse_images"
            app:layout_constraintTop_toBottomOf="@id/select_media_browse_images"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/black_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/videos"
            app:drawableStartCompat="@drawable/select_videod"
            android:drawablePadding="15dp"
            android:background="@drawable/select_mediabg"
            android:paddingHorizontal="69dp"
            android:paddingVertical="3.5dp"
            android:fontFamily="monospace"
            android:layout_marginBottom="9dp"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>